pipeline{
    agent any
    tools{
        maven 'M2_HOME'
    }

    stages{
        stage("scan the code"){
            steps{
                sh'echo 0'
                withSonaqubeEnv("sonarQube"){
                    //sh'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=devops-july_devops-july-1'
                    sh 'mvn sonar:sonar'
                }
            }
        }
        stage("build the job"){
            steps{
                sh 'mvn clean install compile test package'
            }
        }
        stage("store the artefactory"){
            steps{
               sh'echo 2'
            }
        }
        
    }
}
